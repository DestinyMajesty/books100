
<scroll-view class="container" scroll-y="true">
    <view class="section_title">
      <view class="{{chooseLibraryAdded===true ? 'tab-on':''}}" bindtap="libraryAdded">我加入</view>
      <view class="{{chooseLibraryAdded===false ? 'tab-on':''}}" bindtap="libraryCreated">我创建</view>    
    </view>
    <!--我加入的书架-->
    <view class="library" wx:if="{{chooseLibraryAdded}}">
      <view class="controller">
        <view>
        <text class="amount">{{LibraryAddedSum}}</text> 
        <text >个</text> 
        </view>
        <image style="width: 25px; height: 25px; " src="../../images/add-library.png"></image>
      </view>
      <scroll-view class="library-warper" wx:for="{{LibraryAddedList}}" scroll-y >
        <template is="library-item" data="{{ item }}"/>                       
      </scroll-view>
    </view>
    <!--我创建的书架-->
    <view class="library" wx:if="{{!chooseLibraryAdded}}">
      <view class="controller">
        <view>
        <text class="amount">{{LibraryCreatedSum}}</text> 
        <text >个</text> 
        </view>
        <image style="width: 25px; height: 25px; " src="../../images/add-library.png"></image>
      </view>
      <scroll-view class="library-warper" wx:for="{{LibraryCreatedList}}"  scroll-y >
        <template is="library-item" data="{{ item }}"/>             
      </scroll-view>
    </view>  
</scroll-view>


<!-- 书架的模板 -->
<template name="library-item">
  <navigator class="item" url="../library-detail/library-detail?id={{ item.id }}">    
      <image class="poster" src="../../images/library-tab.png"/>
      <view class="meta">
        <view  class="title">{{item.title}}</view>
        <view  class="details">{{item.describe}}</view>
      </view>
   
  </navigator>
</template>
